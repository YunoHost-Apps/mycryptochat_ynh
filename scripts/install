# Retrieve arguments
domain=$1
path=$2

# Check domain/path availability
sudo yunohost app checkurl $domain$path -a mycryptochat
if [[ ! $? -eq 0 ]]; then
    exit 1
fi

# Generate random DES key & password
deskey=$(dd if=/dev/urandom bs=1 count=200 2> /dev/null | tr -c -d '[A-Za-z0-9]' | sed -n 's/\(.\{24\}\).*/\1/p')
db_pwd=$(dd if=/dev/urandom bs=1 count=200 2> /dev/null | tr -c -d '[A-Za-z0-9]' | sed -n 's/\(.\{24\}\).*/\1/p')

# Use 'mycryptochat' as database name and user
db_user=mycryptochat

# Install php
sudo apt-get update
sudo apt-get install php5-cli sqlite php5-sqlite -y

# Initialize database and store mysql password for upgrade
sudo yunohost app initdb $db_user -p $db_pwd -s $(readlink -e ../sources/SQL/mysql.initial.sql)
sudo yunohost app setting mycryptochat mysqlpwd -v $db_pwd

# Copy files to the right place
final_path=/var/www/mycryptochat
sudo mkdir -p $final_path
sudo cp -r ../sources/* $final_path
sudo cp ../conf/LocalSettings.php $final_path/

# Change variables in Mediawiki configuration
sudo sed -i "s@ynh_mycryptochat_path@$path@g" $final_path/LocalSettings.php
sudo sed -i "s@ynh_mycryptochat_domain@$domain@g" $final_path/LocalSettings.php
sudo sed -i "s/ynh_mycryptochat_db_name/$db_user/g" $final_path/LocalSettings.php
sudo sed -i "s/ynh_mycryptochat_db_user/$db_user/g" $final_path/LocalSettings.php
sudo sed -i "s/ynh_mycryptochat_db_password/$db_pwd/g" $final_path/LocalSettings.php

# Update DB
sudo php5 $final_path/maintenance/update.php

# Set permissions to mycryptochat directory
sudo chown -R www-data: $final_path

# Modify Nginx configuration file and copy it to Nginx conf directory
sed -i "s@PATHTOCHANGE@$path@g" ../conf/nginx.conf
sed -i "s@ALIASTOCHANGE@$final_path/@g" ../conf/nginx.conf
sudo cp ../conf/nginx.conf /etc/nginx/conf.d/$domain.d/mycryptochat.conf

# Reload Nginx and regenerate SSOwat conf
sudo service nginx reload
sudo yunohost app ssowatconf
