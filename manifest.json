{
    "name": "MyCryptoChat",
    "id": "mycryptochat",
    "description": {
        "en": "Encrypted IM",
        "fr": "Messagerie Instantanée chiffrée"
    },
    "developer": {
        "name": "mrtino",
        "email": "monsieurtino@mailoo.org",
        "url": "http://github.com/mrtino/"
    },
    "multi_instance": "true",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for MyCryptoChat"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "ask": {
                    "en": "Choose a path for MyCryptoChat"
                },
                "example": "/chatwhithoutnsa",
                "default": "/cryptochat"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            }
        ]
    }
}
